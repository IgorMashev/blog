{% set bem_block = 'blog-content-blog-random-posts' %}
{% if items|length %}
    <div {{ attributes.addClass(bem_block) }}>
        <h2 class="{{ bem_block }}__title"><span>Random articles</span></h2>

        <div class="{{ bem_block }}__items">
            {% for item in items %}
                <div class="{{ bem_block }}__item">
                {{ item }}
            </div>
            {% endfor %}
        </div>
    </div>
{% endif %}