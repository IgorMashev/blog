{% set bem_block = 'blog-label-with-icon-media-formmater' %}
{% set classes = {
    bem_block,
    bem_block ~ '--' ~ media_type|clear_class
} %}
<div{{ attributes.addClass(bem_block) }}>
    <a href="{{ url }}" target="_blank" rel="noopener nofollow" class="{{ bem_block }}__icon">
        {{ source(mime_icon_path) }}
    </a>
<div class="{{ bem_block }}__content">
    <a href="{{ url }}" target="_blank" rel="nooponer nofollow" class="{{ bem_block }}__label">
        {{ label }}
    </a>
</div>
    {% if filesize %}
        <div class="{{ bem_block }}__filesize">
           {{ filesize }}
        </div>
    {% endif %}

    {{ media_type }}
    {{ mime_type }}
</div>